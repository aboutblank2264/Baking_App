<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/step_view"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:layout_gravity = "center"
    android:orientation = "vertical"
    app:contentPadding = "2dp"
    android:overScrollMode = "never"
    >

    <TextView
        android:id = "@+id/step_description"
        style = "@style/StepStyle"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:layout_constraintTop_toTopOf = "parent"
        />

    <!--<ImageView-->
        <!--android:id="@+id/step_expand_carrot"-->
        <!--android:layout_width = "wrap_content"-->
        <!--android:layout_height = "wrap_content"-->
        <!--android:background="@drawable/ic_expand_black_24dp"-->
        <!--app:layout_constraintBottom_toBottomOf="@id/step_description"-->
        <!--app:layout_constraintRight_toRightOf="parent"-->
        <!--/>-->

    <!--<TextView-->
        <!--android:id = "@+id/step_short_description"-->
        <!--style = "@style/TitleStyle"-->
        <!--android:layout_width = "match_parent"-->
        <!--android:layout_height = "wrap_content"-->
        <!--android:visibility="gone"-->
        <!--app:layout_constraintTop_toBottomOf="@id/step_description"-->
        <!--/>-->

    <TextView
        android:id="@+id/step_ellipses"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text="@string/text_ellipses"
        style="@style/StepStyle"
        app:layout_constraintTop_toBottomOf="@id/step_description"
        />

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id = "@+id/expandable_layout"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:el_expanded = "false"
        app:layout_constraintTop_toBottomOf = "@id/step_description"
        >

        <ImageView
            android:id = "@+id/step_thumbnail"
            android:layout_width = "match_parent"
            android:layout_height = "250dp"
            app:layout_constraintTop_toBottomOf="@id/step_description"
            android:visibility="gone"
            />

        <com.aboutblank.baking_app.player.MediaPlayerView
            android:id = "@+id/step_player"
            android:layout_width = "match_parent"
            android:layout_height = "@dimen/video_height"
            app:layout_constraintStart_toStartOf = "@id/expandable_layout"
            style="@style/VideoStyle"
            />

    </net.cachapa.expandablelayout.ExpandableLayout>
</android.support.constraint.ConstraintLayout>